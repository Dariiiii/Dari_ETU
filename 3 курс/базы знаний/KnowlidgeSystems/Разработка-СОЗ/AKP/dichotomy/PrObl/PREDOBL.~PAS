unit Predobl;

interface

uses Tipe,
  SysUtils, WinTypes, WinProcs, Messages, Classes, Graphics, Controls,
  Forms, Dialogs, StdCtrls, Menus;

type
  TFormPredObl = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Edit1: TEdit;
    Label5: TLabel;
    Edit2: TEdit;
    Label6: TLabel;
    Label7: TLabel;
    Edit3: TEdit;
    Edit4: TEdit;
    Label8: TLabel;
    Label9: TLabel;
    Label10: TLabel;
    Label11: TLabel;
    Edit5: TEdit;
    Edit6: TEdit;
    Edit7: TEdit;
    Edit8: TEdit;
    Button1: TButton;
    MainMenu1: TMainMenu;
    N1: TMenuItem;
    procedure Button1Click(Sender: TObject);
    procedure N1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormPredObl: TFormPredObl;
  a,b,x1,x2:real;
  a0: real =1.0; b0: real=10.0;
 const
  eps=0.3; // a0=1.0; b0=10.0;
//procedure eval_proc(number:integer; par:domen; var  par1:domen;
//                    var val:string40;var KD:integer); stdcall;// export;

 function fff(x:real):real;
 procedure initial(var a,b:real);  stdcall;{начальная установка}
 procedure aa1(var x1,x2:real);  {дихотомия}
 procedure a2;  {информация}
 procedure a3({a1:real;var a2:real;} var a:real); {граница_a}
 procedure a4({b1:real;var b2:real; }var b:real);  {граница_b}
 procedure a5(a,b:real;{ans:string40;}var ans2:string40);  {конец}
  procedure a6; {результаты}


implementation

uses frmtest;

{$R *.DFM}
 function fff(x:real):real;
  begin fff:=sqr(x-2.5); end;
// var a,b,x1,x2:real;


 procedure initial2(var a,b:real);  {начальная установка}
 begin  // val:='проведена';
  a:=a0; b:=b0;
{  ShowMessage('НАЧАЛЬНАЯ УСТАНОВКА');}
  FormPredObl.Show{Modal};
  FormPredObl.Edit1.Text:=FloatToStr(a0);
  FormPredObl.Edit4.Text:=FloatToStr(b0);
 end;


 (**)
 procedure initial(var a,b:real);  {начальная установка для запуска после цельной}
 begin   //val:='проведена';
  a:=a0; b:=b0;  x1:=0.0;  x2:=0.0;
{  ShowMessage('НАЧАЛЬНАЯ УСТАНОВКА');}
//    if FormPredObl <> nil then FormPredObl.Close;
//  FormPredObl:= TFormPredObl.Create(Application);
  
  FormPredObl.Show{Modal};
  FormPredObl.Edit1.Text:=FloatToStr(a0);
  FormPredObl.Edit4.Text:=FloatToStr(b0);
 end;
 procedure aa1(var x1,x2:real);  {дихотомия}
 var x:real;
 begin   //val:='проведена';
{  ShowMessage('ДИХОТОМИЯ');}
  x:=(a+b)/2; x1:=x-eps/2; x2:=x+eps/2;
 end;
 procedure a2;  {информация}
 begin   //val:='выведена';
  FormPredObl.Show{Modal};
  FormPredObl.Edit1.Text:=FormatFloat('0.000',a);
  FormPredObl.Edit2.Text:=FormatFloat('0.000',x1);
  FormPredObl.Edit3.Text:=FormatFloat('0.000',x2);
  FormPredObl.Edit4.Text:=FormatFloat('0.000',b);
  FormPredObl.Edit5.Text:=FormatFloat('0.000',fff(a));
  FormPredObl.Edit6.Text:=FormatFloat('0.000',fff(x1));
  FormPredObl.Edit7.Text:=FormatFloat('0.000',fff(x2));
  FormPredObl.Edit8.Text:=FormatFloat('0.000',fff(b));
 end;
 procedure a3({a1:real;var a2:real;} var a:real); {граница_a}
 begin
//  ShowMessage('ГРАНИЦА А');
    if fff(x1)>fff(x2) then a:=x1;
//    if abs(a-a1)<=eps then val:='да'
//    else val:='нет';
//    a2:=a;
 end;
 procedure a4({b1:real;var b2:real; }var b:real);  {граница_b}
 begin
//  ShowMessage('ГРАНИЦА В');
    if fff(x1)<fff(x2) then b:=x2;
//    if abs(b-b1)<=eps then val:='да'
//    else val:='нет';
//    b2:=b;
 end;
 procedure a5(a,b:real;{ans:string40;}var ans2:string40);  {конец}
 var val1:string40;
 begin
{  ShowMessage('КОНЕЦ');}
  if abs(a-b)<=2*eps+eps/100 then val1:='да' else val1:='нет';
//  if val1=ans then val:='да' else val:='нет';
  ans2:= val1;
 end;
 procedure a6; {результаты}
 begin
ShowMessage('  Р Е З У Л Ь Т А Т Ы'+#13+
'x1='+FormatFloat('0.000',x1)+
' f(x1)='+FormatFloat('0.000',fff(x1))+#13+
'x2='+FormatFloat('0.000',x2)+
' f(x2)='+FormatFloat('0.000',fff(x2)));
 end;

 (**)

 {АОС методу дихотомии}


 procedure TFormPredObl.Button1Click(Sender: TObject);
// цельная
var ans2:string40;
label 1;
begin
   initial2(a,b);   {начальная установка}
   ShowMessage('начальная установка');
   aa1(x1,x2);
   ShowMessage('ДИХОТОМИЯ');
   a2;
   ShowMessage('обновленная_информация');
  1: a3(a);  ShowMessage('граница_a');
   a2;
   ShowMessage('обновленная_информация');
   a4(b);    ShowMessage('граница_b ');
   a2;
   ShowMessage('обновленная_информация');
   aa1(x1,x2);
   ShowMessage('ДИХОТОМИЯ');
   a2;
   ShowMessage('обновленная_информация');
   a5(a,b,ans2);ShowMessage('Проверка окончания');
   if (ans2 <> 'да') then goto 1;
   a6;
   ShowMessage('Конец решения');
end;

procedure TFormPredObl.N1Click(Sender: TObject);
begin
  frmTestLog:=TfrmTestLog.Create(Application);
  frmTestLog.Show;
end;

end.
